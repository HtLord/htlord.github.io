---
import '@styles/tailwind.css';
import Profile from "../components/resume/Profile.astro";
import Experience from "../components/resume/Experience.astro";
import You from "../components/resume/You.astro";
import Summary from "../components/resume/Summary.astro";
---
<div class=`
  grid grid-cols-12
  px-[5%] 
  shadow-gray-500
  print:min-h-[297mm]
  print:min-w-[220mm]
  `
>
  <div class='
    flex flex-col min-h-full col-span-8
    pt-4 pl-16 pr-4 pb-16
  '>
    <You/>
    <Summary/>
    <Experience />
  </div>
  <div class='min-h-full col-span-4 bg-gray-light p-4'>
    <Profile/>
  </div>
</div>