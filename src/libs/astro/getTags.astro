import { getPostsFromBlogCollection } from '@libs/astro/getPosts.astro';
export async function getBlogCollectionTags() {
    const posts = await getPostsFromBlogCollection();
    let tags = new Set<string>();

    posts.filter(post => !post.frontmatter.draft)
        .map(post => post.frontmatter.tags)
        .flat()
        .filter(tag => tag)
        .forEach(tag => tags.add(tag));

    return [...tags];
}
